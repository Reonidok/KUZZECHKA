@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer;

<div class="container pt-3 pb-3">
    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                    @Localizer["Имена прилагательные"]
                </button>
            </h2>
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                <div class="accordion-body">
                    @Localizer["text-1"]
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                    @Localizer["Имена существительные"]
                </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                    @Localizer["text-2"]
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                    @Localizer["Падежи"]
                </button>
            </h2>
            <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingThree">
                <div class="accordion-body">
                    @Localizer["text-3"]
                </div>
            </div>
        </div>
    </div>
    <div class="btn-group pb-1 pt-4" role="group">
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="Store">@Localizer["В Магазине"]</a>
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="Gym">@Localizer["В Спортзале"]</a>
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="Hospital">@Localizer["В Больнице"]</a>
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="Bank">@Localizer["В Банке"]</a>
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="Transport">@Localizer["В Транспорте"]</a>
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="University">@Localizer["В Университете"]</a>
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="Rent">@Localizer["Аренда жилья"]</a>
        <a class="btn btn-outline-primary" type="button" asp-controller="Practice" asp-action="Street">@Localizer["На Улице"]</a>
    </div>
</div>


